#include <stdio.h>

int main() {
	printf("Ch.Durga Narendra - 192211285\n");
    int num, reversed = 0, remainder, original;

    printf("Enter a number: ");
    scanf("%d", &num);

    original = num;

    while (num != 0) {
        remainder = num % 10;
        reversed = reversed * 10 + remainder;
        num /= 10;
    }

    printf("The reverse of %d is %d.\n", original, reversed);

    return 0;
}
